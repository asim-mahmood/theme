<div class="max-w-6xl mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-8 text-center">{{ blog.title }}</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for article in blog.articles %}
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        {% if article.image %}
          <a href="{{ article.url }}">
            <img 
              src="{{ article.image | image_url: width: 400 }}" 
              alt="{{ article.image.alt | escape }}"
              class="w-full h-48 object-cover"
              width="{{ article.image.width }}" 
              height="{{ article.image.height }}"
            >
          </a>
        {% endif %}
          <div class="p-6">
          <h2 class="text-xl font-semibold mb-2">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </h2>
          <p class="text-gray-600 text-sm mb-4">
            By {{ article.author }} &bull; {{ article.published_at | date: "%B %d, %Y" }}
            {% if article.comments_count > 0 %}
              &bull; {{ article.comments_count }} {{ article.comments_count | pluralize: 'comment', 'comments' }}
            {% endif %}
          </p>
          {% if article.excerpt != blank %}
            <p class="text-gray-700 mb-4">{{ article.excerpt | strip_html | truncatewords: 20 }}</p>
          {% endif %}

          {% if article.tags.size > 0 %}
            <div class="flex flex-wrap gap-2 mb-4">
              {% for tag in article.tags %}
                <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="px-2 py-1 bg-gray-100 rounded-full text-xs font-medium text-gray-700 hover:bg-gray-200">{{ tag }}</a>
              {% endfor %}
            </div>
          {% endif %}

          <a href="{{ article.url }}" class="text-blue-600 hover:underline">Read more</a>
        </div>
          
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Blog Posts",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ]
}
{% endschema %}