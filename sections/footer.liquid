<section class="bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-12 grid grid-cols-1 md:grid-cols-4 gap-10">

    <!-- STORE INFO -->
    <div>
      {% if section.settings.store_logo %}
        <img 
          src="{{ section.settings.store_logo | image_url: width: 200 }}" 
          alt="Store Logo" 
          class="mb-4 w-32"
        >
      {% else %}
        <h2 class="text-2xl font-semibold mb-4">{{ shop.name }}</h2>
      {% endif %}

      <p class="text-gray-700">{{ section.settings.address }}</p>
      <p class="text-gray-700 mt-1">Email: {{ section.settings.email }}</p>
      <p class="text-gray-700 mt-1">Phone: {{ section.settings.phone }}</p>

      <!-- SOCIAL ICONS -->
      <div class="flex space-x-4 mt-4">
        {% for block in section.blocks %}
          {% if block.type == 'social' %}
            <a href="{{ block.settings.url }}" target="_blank" class="text-gray-600 hover:text-black">
              {{ block.settings.icon }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- HELP -->
    <div>
      <h3 class="font-semibold mb-4">Help</h3>
      <ul class="space-y-2 text-gray-700">
        {% for link in linklists[section.settings.help_menu].links %}
          <li><a href="{{ link.url }}" class="hover:text-black">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- USEFUL LINKS -->
    <div>
      <h3 class="font-semibold mb-4">Useful Links</h3>
      <ul class="space-y-2 text-gray-700">
        {% for link in linklists[section.settings.useful_menu].links %}
          <li><a href="{{ link.url }}" class="hover:text-black">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- NEWSLETTER -->
    <div>
      <h3 class="font-semibold mb-4">Sign Up for Email</h3>
      <p class="text-gray-700 mb-4">{{ section.settings.newsletter_text }}</p>

      <form method="post" action="/contact#contact_form" id="contact_form" class="flex">
        <input type="hidden" name="form_type" value="customer">
        <input type="email" required name="contact[email]"
          placeholder="Enter email address"
          class="flex-grow border border-gray-300 px-3 py-2 rounded-l-md"
        >
        <button class="bg-black text-white px-4 rounded-r-md">
          Subscribe
        </button>
      </form>
    </div>

  </div>

  <div class="border-t border-gray-200 py-6 text-center text-gray-600">
    Â© {{ "now" | date: "%Y" }} {{ shop.name }}. All rights reserved.
  </div>
</section>


{% schema %}
{
  "name": "Custom Modern Footer",
  "settings": [
    { "type": "image_picker", "id": "store_logo", "label": "Store Logo" },
    { "type": "text", "id": "address", "label": "Address", "default": "1234 Fashion Street, Suite 567, New York" },
    { "type": "text", "id": "email", "label": "Email", "default": "info@example.com" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "(212)555-1234" },

    { "type": "link_list", "id": "help_menu", "label": "Help Menu" },
    { "type": "link_list", "id": "useful_menu", "label": "Useful Links Menu" },

    { "type": "text", "id": "newsletter_text", "label": "Newsletter text", "default": "Get first dibs on new arrivals & exclusive offers!" }
  ],

  "blocks": [
    {
      "type": "social",
      "name": "Social Icon",
      "settings": [
        { "type": "url", "id": "url", "label": "Icon Link" },
        { "type": "html", "id": "icon", "label": "SVG Icon" }
      ]
    }
  ],

  "presets": [
    { "name": "Custom Modern Footer" }
  ]
}
{% endschema %}
