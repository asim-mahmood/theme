<footer class="bg-gray-900 text-white pt-12 pb-8">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap gap-4 -mx-4">

      <!-- ðŸ¬ STORE INFO -->
      <div class="w-full md:w-1/4 lg:w-1/3 px-4 mb-8 md:mb-0">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="mb-4 h-10 w-auto" width="200" height="{{ 200 | divided_by: section.settings.logo.aspect_ratio | round }}">
        {% else %}
          <h2 class="text-2xl font-bold mb-4 break-words">{{ section.settings.store_name | default: shop.name }}</h2>
        {% endif %}

        {% if section.settings.about_title != blank %}
          <h2 class="text-xl font-bold mb-4">{{ section.settings.about_title }}</h2>
        {% endif %}

        <p class="text-sm text-gray-300">{{ section.settings.about_text }}</p>
      </div>

      <!-- ðŸ›ï¸ SHOP MENU -->
      <div class="w-full md:w-1/4 lg:w-1/5 px-4 mb-8 md:mb-0">
        <h2 class="text-xl font-bold mb-4">{{ section.settings.shop_menu_title }}</h2>
        <ul class="list-none">
          {% for link in linklists[section.settings.shop_menu].links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors duration-200">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- ðŸ“– INFORMATION MENU -->
      <div class="w-full md:w-1/4 lg:w-1/5 px-4 mb-8 md:mb-0">
        <h2 class="text-xl font-bold mb-4">{{ section.settings.info_menu_title }}</h2>
        <ul class="list-none">
          {% for link in linklists[section.settings.info_menu].links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors duration-200">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- ðŸ“° NEWSLETTER -->
      <div class="w-full md:w-1/4 lg:w-1/5 px-4 mb-8 md:mb-0">
        <h2 class="text-xl font-bold mb-4">{{ section.settings.newsletter_title }}</h2>
        <p class="text-sm">{{ section.settings.newsletter_text }}</p>

        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="mt-4">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <div class="flex flex-wrap -mx-2">
            <div class="w-full px-2">
              <input type="email" name="contact[email]" required
                class="w-full px-4 py-2 rounded-sm bg-gray-800 text-white focus:outline-none focus:bg-white focus:text-gray-900"
                placeholder="Email Address">
            </div>
            <div class="w-full px-2 mt-4">
              <button type="submit"
                class="w-full px-4 py-2 rounded-sm bg-gray-700 text-white hover:bg-gray-600 focus:outline-none focus:bg-gray-600">
                {{ section.settings.newsletter_button_label }}
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- ðŸŒ FOOTER BOTTOM -->
  <div class="border-t border-gray-800 mt-8">
    <div class="container mx-auto px-4 py-4 flex flex-wrap items-center">
      <div class="w-full md:w-1/2 text-center md:text-left">
        <p class="text-sm text-gray-400">
          Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
        </p>
      </div>
      <div class="w-full md:w-1/2 text-center md:text-right">
        {% if section.settings.payment_image != blank %}
          <img src="{{ section.settings.payment_image | image_url: width: 400 }}" alt="Payment Methods" class="mx-auto md:ml-auto h-6" width="400" height="{{ 400 | divided_by: section.settings.payment_image.aspect_ratio | round }}">
        {% else %}
          <span class="text-gray-400 text-sm">Payment icons go here</span>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "text",
      "id": "store_name",
      "label": "Store name",
      "default": "My Shopify Store"
    },
    {
      "type": "text",
      "id": "about_title",
      "label": "About section title",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vel eros sit amet odio aliquet tincidunt."
    },
    {
      "type": "text",
      "id": "shop_menu_title",
      "label": "Shop menu title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "shop_menu",
      "label": "Shop menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "info_menu_title",
      "label": "Information menu title",
      "default": "Information"
    },
    {
      "type": "link_list",
      "id": "info_menu",
      "label": "Information menu",
      "default": "footer-menu"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Subscribe to our newsletter to receive updates and offers."
    },
    {
      "type": "text",
      "id": "newsletter_button_label",
      "label": "Newsletter button text",
      "default": "Subscribe"
    },
    {
      "type": "image_picker",
      "id": "payment_image",
      "label": "Payment methods image"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "All rights reserved."
    }
  ]
}
{% endschema %}
