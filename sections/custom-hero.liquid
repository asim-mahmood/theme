<section id="{{ section.id }}" class="relative w-full">

  {% if section.settings.image %}
    <!-- Background Image -->
    <div class="absolute inset-0 w-full h-full">
      {{ section.settings.image 
        | image_url: width: 2400 
        | image_tag: class: 'w-full h-full object-cover object-center', alt: section.settings.alt 
      }}
    </div>
  {% endif %}

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/40"></div>

  <!-- Content -->
  <div class="relative max-w-3xl mx-auto px-6 lg:px-10 py-32 text-center text-white">
    <h1 class="text-3xl sm:text-4xl lg:text-6xl font-bold leading-tight drop-shadow-md">
      {{ section.settings.heading }}
    </h1>

    <p class="mt-4 text-lg sm:text-xl lg:text-2xl font-light drop-shadow-md">
      {{ section.settings.subheading }}
    </p>

    <!-- Button (Optional but looks great) -->
    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="inline-block mt-8 bg-white text-gray-900 px-8 py-3 rounded-full font-semibold text-lg shadow hover:bg-gray-200 transition"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

</section>


{% schema %}
{
  "name": "Custom Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to My Demo Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Built with Liquid & OS 2.0 Sections"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Image alt text",
      "default": "Hero background image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}
