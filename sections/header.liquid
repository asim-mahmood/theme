<!-- NAVBAR -->
<header class="border-b border-gray-200 bg-white">
  <div class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-6">

      <!-- LOGO / STORE NAME -->
      <div class="flex items-center space-x-2">
        <a href="{{ routes.root_url }}" class="flex items-center space-x-2">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" class="h-8 w-auto">
          {% else %}
            <span class="text-xl font-bold">{{ shop.name }}</span>
          {% endif %}
        </a>
      </div>

      <!-- DESKTOP MENU -->
      <nav class="hidden md:flex space-x-8">
        {% for link in linklists.main-menu.links %}
          {% if link.links != blank %}
            <div class="group relative">
              <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center space-x-1">
                <span>{{ link.title }}</span>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-700" fill="none" stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Dropdown -->
              <div
                class="hidden group-hover:block absolute bg-white shadow-lg rounded-lg mt-2 py-3 min-w-[180px] z-20">
                {% for sublink in link.links %}
                  <a href="{{ sublink.url }}"
                    class="block px-4 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50">
                    {{ sublink.title }}
                  </a>
                {% endfor %}
              </div>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-gray-600 hover:text-gray-900 font-medium">
              {{ link.title }}
            </a>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- RIGHT SIDE LINKS -->
      <div class="hidden md:flex items-center space-x-5">
        <a href="/cart" class="text-gray-600 hover:text-gray-900">Cart</a>
        {% if customer %}
          <a href="/account" class="text-gray-600 hover:text-gray-900">Account</a>
          <a href="/account/logout" class="text-gray-600 hover:text-gray-900">Logout</a>
        {% else %}
          <a href="/account/login" class="text-gray-600 hover:text-gray-900">Login</a>
          <a href="/account/register" class="text-gray-600 hover:text-gray-900">Register</a>
        {% endif %}
      </div>

      <!-- MOBILE MENU BUTTON -->
      <button id="mobile-menu-toggle" class="md:hidden p-2 text-gray-500 hover:text-gray-900 focus:outline-none">
        {% icon-shopping-bag %}
      </button>

    </div>
  </div>

  <!-- MOBILE MENU -->
  <nav id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white px-4 py-4">
    {% for link in linklists.main-menu.links %}
      {% if link.links != blank %}
        <div class="mb-3">
          <button class="w-full flex justify-between items-center text-gray-600 hover:text-gray-900 font-medium py-2"
            onclick="this.nextElementSibling.classList.toggle('hidden')">
            <span>{{ link.title }}</span>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden pl-4 space-y-2">
            {% for sublink in link.links %}
              <a href="{{ sublink.url }}" class="block text-sm text-gray-600 hover:text-gray-900">
                {{ sublink.title }}
              </a>
            {% endfor %}
          </div>
        </div>
      {% else %}
        <a href="{{ link.url }}" class="block py-2 text-gray-600 hover:text-gray-900 font-medium">
          {{ link.title }}
        </a>
      {% endif %}
    {% endfor %}
  </nav>
</header>

<!-- Simple JS toggle -->
<script>
  document.getElementById('mobile-menu-toggle').addEventListener('click', function () {
    document.getElementById('mobile-menu').classList.toggle('hidden');
  });
</script>
